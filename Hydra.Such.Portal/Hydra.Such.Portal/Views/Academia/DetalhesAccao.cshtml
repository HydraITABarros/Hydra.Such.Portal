<link rel="import" href="~/elements/academia/DetalheAccao.html" />
<link rel="import" href="~/elements/academia/DetalhesAccaoCatalogo.html" />
<link rel="import" href="~/elements/academia/DetalhesAccaoAutorizar.html" />

@{

    ViewData["Title"] = "Detalhe Acção: " + ViewBag.codInterno + " - " + ViewBag.designacaoAccao;
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (@ViewBag.fromTema)
    {
        <x-detalheaccao _idaccao="@ViewBag.idAccao" _ismanager="@ViewBag.isAcademiaUser"></x-detalheaccao>
    }
    else
    {
        if (@ViewBag.paraAutorizar)
        {
            <x-detalheaccaoautorizar 
                _idaccao="@ViewBag.idAccao" 
                _requestorigin="@ViewBag.RequestOrigin"
                _ischief="@ViewBag.isChief" 
                _iscoordenador ="@ViewBag.isCoordenador"
                _isdirector="@ViewBag.isDirector" 
                _isboardmember="@ViewBag.isBoardMember"
                _escondefundamentacao="@ViewBag.EscondeFundamentacao">
            </x-detalheaccaoautorizar>
        }
        else
        {
            <x-detalheaccaocatalogo _idaccao="@ViewBag.idAccao"></x-detalheaccaocatalogo>
        }

    }

}

