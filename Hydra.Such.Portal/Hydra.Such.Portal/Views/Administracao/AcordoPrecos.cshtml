                        var data = new FormData();
                        var uploadFile = this.$.UploadRequest.files;
                        var ajaxImport = this.$.ajax_updateCreate;
                        var vaadinGrid = this.$.tabLinhas;
                        for (var i = 0; i < uploadFile.length; i++) {
