        window.addEventListener('WebComponentsReady', function () {
            var upload = document.querySelector('vaadin-upload#UploadRequest');

            upload.addEventListener('upload-response', function (event) {
                console.log('upload xhr after server response: ', event.detail.xhr);
                event.detail.file.error = 'Custom server error message.';
                this._showErrorMessage(event.detail.file.name + ' erro: ' + event.detail.error);
            });

            upload.addEventListener('file-reject', function (event) {
                this._showErrorMessage(event.detail.file.name + ' erro: ' + event.detail.error);
            });
        });

        document.addEventListener('WebComponentsReady',
            function () {
                Polymer({
                    is: 'x-group-cont-product',
                    properties: {
                        _permissionsUpdate: {
                            type: Boolean,
                            value: UpdateValue
                        },
                        _permissionsCreate: {
                            type: Boolean,
                            value: CreateValue
                        },
                        _permissionsDelete: {
                            type: Boolean,
                            value: DeleteValue
                        },
                        selected: {
                            type: Number,
                            value: 0
                        },
                        ddgroupcontprod: {
                            type: String,
                            notify: true,
                            value: ""
                        },
                        _CBItems: {
                            observer: '_setProductData'
                        },
                    },

                    ready: function () {
                        this.$.page_databound_ajax.body = JSON.stringify({ "NoProcedimento": "@ViewBag.NoProcedimento" });
                        this.$.page_databound_ajax.generateRequest();

                        var _this = this;
                        $(window).resize(function () {
                            _this.fixGridToBottom();
                        });
                        $(window).trigger('resize');
                    },

                    fixGridToBottom: function () {
                        var grid_el = $(this.$.tabLinhas);
                        var parentHeight = $(this).offsetParent().height();
                        var offsetTop = $(this).offset().top;
                        var height = parentHeight - offsetTop;
                        grid_el.height(height);
                    },

                    _setProductData: function (e) {
                        if (this.CBItems != undefined) {
                            var item = this.CBItems.find(x => x.code == e);
                            if (item != null) {
                                this.$.linhasCustoUnitario.value = item.unitCost;
                                this.$.linhasUM.value = item.measureUnit;
                                this.$.linhasCodCategoriaProduto.value = item.itemCategoryCode;
                            }
                            else {
                                this.$.linhasCustoUnitario.value = "";
                                this.$.linhasUM.value = "";
                                this.$.linhasCodCategoriaProduto.value = "";
                            }
                        }
                    },

                    //Mostra Mensagens
                    _showMessage: function (message) {
                        this.$.ToastMessageSuccess.text = message;
                        this.$.ToastMessageSuccess.open();
                    },

                    //Mostra Mensagens de Erro
                    _showErrorMessage: function (message) {
                        this.$.ToastMessageError.text = message;
                        this.$.ToastMessageError.open();
                    },

                    _validateData: function (container) {
                        var polymerDom = Polymer.dom(this.$[container]);
                        var errors = 0;
                        var formSelector = "vaadin-text-field, vaadin-date-picker, vaadin-combo-box";
                        var formFields = polymerDom.querySelectorAll(formSelector);

                        formFields.forEach(function (element) {
                            if (!element.validate()) {
                                errors++;
                            }
                        });

                        if (errors > 0) {
                            this._showErrorMessage('Verifique os dados inseridos.');
                            return false;
                        }

                        return true;
                    },

                    _createAcordoPrecos: function () {
                        if (this._validateData("acordoPrecosCreate")) {
                            this.$.ajax_acordoPrecos_create.body = JSON.stringify({
                                noProcedimento: this.$.acordoPrecosNoProcedimento.value,
                                dtInicio: this.$.acordoPrecosDtInicio.value,
                                dtFim: this.$.acordoPrecosDtFim.value,
                                valorTotal: this.$.acordoPrecosValorTotal.value
                            });
                            this.$.ajax_acordoPrecos_create.generateRequest();
                        }
                    },

                    _createAcordoPrecos_Response: function (e) {
                        if (this._createResult == 0) {
                            this.$.linhasNoProcedimento.value = this.$.acordoPrecosNoProcedimento.value;
                            this.$.fornecedorNoProcedimento.value = this.$.acordoPrecosNoProcedimento.value;
                            this._showMessage('Acordo de Preços criado com sucesso.');
                        }

                        if (this._createResult == 1) {
                            this.$.linhasNoProcedimento.value = "";
                            this._showErrorMessage('Ocorreu um erro ao criar o Acordo de Preços.');
                        }
                    },

                    _createLinhaAcordoPrecos: function () {
                        if (this.$.linhasNoProcedimento.value != "") {
                            if (this.$.linhasNoFornecedor.value != "") {
                                if (this.$.linhasCodProduto.value != "") {
                                    if (this.$.linhasDtValidadeInicio.value != "") {
                                        if (this.$.linhasCresp.value != "") {
                                            if (this.$.linhasLocalizacao.value != "") {
                                                this.$.ajax_linhaAcordoPrecos_create.body = JSON.stringify({
                                                    noProcedimento: this.$.linhasNoProcedimento.value,
                                                    noFornecedor: this.$.linhasNoFornecedor.value,
                                                    noSubFornecedor: this.$.linhasNoSubFornecedor.value,
                                                    codProduto: this.$.linhasCodProduto.value,
                                                    dtValidadeInicio: this.$.linhasDtValidadeInicio.value,
                                                    dtValidadeFim: this.$.linhasdtValidadeFim.value,
                                                    regiao: this.$.linhasRegiao.value,
                                                    area: this.$.linhasArea.value,
                                                    cresp: this.$.linhasCresp.value,
                                                    localizacao: this.$.linhasLocalizacao.value,
                                                    custoUnitario: this.$.linhasCustoUnitario.value,
                                                    custoUnitarioSubFornecedor: this.$.linhasCustoUnitarioSubFornecedor.value,
                                                    uM: this.$.linhasUM.value,
                                                    qtdPorUM: this.$.linhasQuantidadeUM.value,
                                                    pesoUnitario: this.$.linhasPesoUnitario.value,
                                                    codProdutoFornecedor: this.$.linhasCodProdutoFornecedor.value,
                                                    descricaoProdFornecedor: this.$.linhasDescricaoProdutoFornecedor.value,
                                                    formaEntrega: this.$.linhasFormaEntrega.value,
                                                    tipoPreco: this.$.linhasTipoPreco.value,
                                                    grupoRegistoIvaProduto: this.$.linhasGrupoRegistoIvaProduto.value,
                                                    codCategoriaProduto: this.$.linhasCodCategoriaProduto.value,
                                                    noContrato: this.$.linhasNoContrato.value
                                                });
                                                this.$.ajax_linhaAcordoPrecos_create.generateRequest();
                                            }
                                            else {
                                                this._showErrorMessage('O campo Cód. Localização é de preenchimento obrigatório.');
                                            }
                                        }
                                        else {
                                            this._showErrorMessage('O campo Cresp é de preenchimento obrigatório.');
                                        }
                                    }
                                    else {
                                        this._showErrorMessage('O campo Data Validade Início é de preenchimento obrigatório.');
                                    }
                                }
                                else {
                                    this._showErrorMessage('O campo Cód. Produto é de preenchimento obrigatório.');
                                }
                            }
                            else {
                                this._showErrorMessage('O campo Nº Fornecedor é de preenchimento obrigatório.');
                            }
                        }
                        else {
                            this._showErrorMessage('O campo Nº Procedimento é de preenchimento obrigatório.');
                        }
